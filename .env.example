# Sendblue
SENDBLUE_API_KEY=
SENDBLUE_API_SECRET=
SENDBLUE_PHONE_NUMBER=+15550001111
SENDBLUE_API_BASE=https://api.sendblue.co/api

# Trusted inbound number (single-user v1)
TRUSTED_PHONE_NUMBER=+15550002222

# Polling
POLL_INTERVAL_MS=3000

# Bridge behavior
ENABLE_TYPING_INDICATORS=1
ENABLE_READ_RECEIPTS=1
ENABLE_OUTBOUND_UNICODE_FORMATTING=1
# Mark inbound messages already present at startup as processed.
DISCARD_BACKLOG_ON_START=1
INBOUND_MEDIA_MODE=url_only
TYPING_HEARTBEAT_MS=10000

# Notification turns / retention
ENABLE_NOTIFICATION_TURNS=1
NOTIFICATION_RAW_EXCERPT_BYTES=4096
NOTIFICATION_RETENTION_DAYS=90
NOTIFICATION_MAX_ROWS=25000
ENABLE_HEARTBEAT_SOURCE=0

# Notification webhook ingress
ENABLE_NOTIFICATION_WEBHOOK=1
NOTIFICATION_WEBHOOK_HOST=0.0.0.0
NOTIFICATION_WEBHOOK_PORT=8787
NOTIFICATION_WEBHOOK_PATH=/events
NOTIFICATION_WEBHOOK_SECRET=replace-me

# Codex
# Requires Codex CLI >=0.101.0
CODEX_BIN=codex
CODEX_CWD=/Users/your-user/code/your-repo
CODEX_MODEL_PREFIX=gpt-5.3-codex
CODEX_MODEL=gpt-5.3-codex

# Local state DB
STATE_DB_PATH=/Users/your-user/.imessage-codex-bridge/state.db
